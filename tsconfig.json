{
	"compilerOptions": {
		"target": "ES2021",
		"lib": [
			"ES2021",
		],
		"module": "commonjs",
		"moduleResolution": "node",
		"sourceMap": true,
		"composite": true,
		"declaration": true,
		"strict": true,
		"alwaysStrict": false,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"noUnusedLocals": true,
		"esModuleInterop": true,
		"baseUrl": "./",
		"noEmit": true,
		"paths": {
			"volar-service-*": [
				"packages/*/src"
			],
		}
	},
	"include": [
		"packages/*/src",
		"packages/*/rules.d.ts",
	],
}